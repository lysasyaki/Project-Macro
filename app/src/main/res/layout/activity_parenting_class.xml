<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBlue"
    tools:context=".ParentingClass">

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:id="@+id/back"
        />

    <TextView
        android:id="@+id/parenting_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="92dp"
        android:text="Parenting Class"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="535dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/shape_home"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="427dp"
            android:layout_height="790dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="@color/LightBlue"
                app:cardCornerRadius="25dp"
                android:id="@+id/Parent">

                <TextView
                    android:id="@+id/class1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="15dp"
                    android:text="seminar diskusi dengan tema “kedekatan anak dan orang tua menentukan masa depan anak”"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="106dp"
                    android:layout_height="103dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/img_2" />

                <Button
                    android:id="@+id/btn_baca_seleng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="@color/LightBlue"
                    android:text="Baca Selengkapnya > "
                    android:textColor="@color/pudar" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="@color/LightBlue"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/class2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="15dp"
                    android:text="seminar diskusi dengan tema “kedekatan anak dan orang tua menentukan masa depan anak”"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="106dp"
                    android:layout_height="103dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/img_2" />

                <TextView
                    android:id="@+id/btn_baca_seleng2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="90dp"
                    android:text="Baca Selengkapnya > "
                    android:textColor="@color/pudar" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="@color/LightBlue"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/class3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="15dp"
                    android:text="seminar diskusi dengan tema “kedekatan anak dan orang tua menentukan masa depan anak”"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="106dp"
                    android:layout_height="103dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/img_2" />

                <TextView
                    android:id="@+id/btn_baca_seleng3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="90dp"
                    android:text="Baca Selengkapnya > "
                    android:textColor="@color/pudar" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:layout_margin="25dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/LightBlue"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/class4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="15dp"
                    android:text="seminar diskusi dengan tema “kedekatan anak dan orang tua menentukan masa depan anak”"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="106dp"
                    android:layout_height="103dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/img_2" />

                <TextView
                    android:id="@+id/btn_baca_seleng4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="90dp"
                    android:text="Baca Selengkapnya > "
                    android:textColor="@color/pudar" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="266dp"
        android:layout_height="39dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/search_bg"
        app:layout_constraintBottom_toTopOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parenting_class"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/searchView"
        app:layout_constraintTop_toBottomOf="@+id/parenting_class"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_notifications_none_24" />

</androidx.constraintlayout.widget.ConstraintLayout>